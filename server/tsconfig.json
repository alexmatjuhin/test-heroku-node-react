{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node", "express"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "client/**/*"
    ]
}
